<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="netease_toolbar_title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="netease_toolbar_subtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">#eeeeee</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="neteasa_music_time_text_sytle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ccc</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="neteasa_music_time_seek_bar_sytle" parent="Widget.AppCompat.SeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:thumb">@drawable/ic_music_seekbar_thumb</item>
    </style>

    <!--  白色风格  -->
    <style name="AppStyleWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item><!-- 状态栏字体颜色(API-23-M):黑色 -->
        <item name="android:windowTranslucentStatus">true</item><!-- 沉浸式 -->
        <item name="android:windowTranslucentNavigation">true</item><!-- 沉浸式 -->
        <item name="android:fitsSystemWindows">true</item><!-- 让"可操作根布局"的子布局(内容布局)避免被[状态栏]和[挖孔]遮挡 -->
        <item name="android:textColor">#000000</item><!-- 全局文字颜色 -->
        <item name="android:colorBackground">#FFFFFF</item><!-- "可操作根布局"的父布局的背景色 -->
        <!-- 自定义属性-范例 -->
        <item name="colorAttrName">@color/bt_bg</item>
        <item name="integerAttrName">11</item>
        <item name="booleanAttrName">true</item>
        <item name="dimensionAttrName">99px</item>
        <item name="floatAttrName">@dimen/float_value</item>
        <item name="stringAttrName">@string/themes_type_white</item>
        <item name="referenceAttrName">@mipmap/ic_launcher</item>
    </style>

    <!--  黑色风格  -->
    <style name="AppStyleBlack" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="M">false</item><!-- 状态栏字体颜色(API-23-M):白色 -->
        <item name="android:windowTranslucentStatus">true</item><!-- 沉浸式 -->
        <item name="android:windowTranslucentNavigation">true</item><!-- 沉浸式 -->
        <item name="android:fitsSystemWindows">true</item><!-- 让"可操作根布局"的子布局(内容布局)避免被[状态栏]和[挖孔]遮挡 -->
        <item name="android:textColor">#FFFFFF</item><!-- 全局文字颜色 -->
        <item name="android:colorBackground">#000000</item><!-- "可操作根布局"的父布局的背景色 -->
        <!-- 自定义属性-范例 -->
        <item name="colorAttrName">@color/bt_bg_black</item>
        <item name="integerAttrName">99</item>
        <item name="booleanAttrName">false</item>
        <item name="dimensionAttrName">99dp</item>
        <item name="floatAttrName">@dimen/float_value_black</item>
        <item name="stringAttrName">@string/themes_type_black</item>
        <item name="referenceAttrName">@mipmap/ic_launcher_black</item>
    </style>

</resources>
